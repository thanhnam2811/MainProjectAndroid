<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:stretchColumns="*"
    tools:context=".CalculatorActivity">

    <TableRow>

        <TextView
            android:id="@+id/txtCalc"
            android:layout_height="54dp"
            android:layout_weight="4"
            android:gravity="right"
            android:text="0"
            android:textSize="48dp" />
    </TableRow>

    <TableRow>

        <Button
            android:layout_height="54dp"
            android:layout_margin="4dp"
            android:onClick="onClick_Append"
            android:text="("
            android:textSize="20dp" />

        <Button
            android:layout_height="54dp"
            android:layout_margin="4dp"
            android:onClick="onClick_Append"
            android:text=")"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_height="54dp"
            android:layout_margin="4dp"
            android:text="DEL"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnClear"
            android:layout_height="54dp"
            android:layout_margin="4dp"
            android:text="AC"
            android:textSize="20dp" />
    </TableRow>

    <TableRow>

        <Button
            android:layout_height="54dp"
            android:layout_margin="4dp"
            android:backgroundTint="#D7DBDD"
            android:onClick="onClick_Append"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:layout_height="54dp"
            android:layout_margin="4dp"
            android:backgroundTint="#D7DBDD"
            android:onClick="onClick_Append"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:layout_height="54dp"
            android:layout_margin="4dp"
            android:backgroundTint="#D7DBDD"
            android:onClick="onClick_Append"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:layout_height="54dp"
            android:layout_margin="4dp"
            android:onClick="onClick_Append"
            android:text="/"
            android:textSize="20dp" />
    </TableRow>

    <TableRow>

        <Button
            android:layout_height="54dp"
            android:layout_margin="4dp"
            android:backgroundTint="#D7DBDD"
            android:onClick="onClick_Append"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:layout_height="54dp"
            android:layout_margin="4dp"
            android:backgroundTint="#D7DBDD"
            android:onClick="onClick_Append"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:layout_height="54dp"
            android:layout_margin="4dp"
            android:backgroundTint="#D7DBDD"
            android:onClick="onClick_Append"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:layout_height="54dp"
            android:layout_margin="4dp"
            android:onClick="onClick_Append"
            android:text="*"
            android:textSize="20dp" />
    </TableRow>

    <TableRow>

        <Button
            android:layout_height="54dp"
            android:layout_margin="4dp"
            android:backgroundTint="#D7DBDD"
            android:onClick="onClick_Append"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:layout_height="54dp"
            android:layout_margin="4dp"
            android:backgroundTint="#D7DBDD"
            android:onClick="onClick_Append"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:layout_height="54dp"
            android:layout_margin="4dp"
            android:backgroundTint="#D7DBDD"
            android:onClick="onClick_Append"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:layout_height="54dp"
            android:layout_margin="4dp"
            android:onClick="onClick_Append"
            android:text="-"
            android:textSize="20dp" />
    </TableRow>

    <TableRow>

        <Button
            android:layout_height="54dp"
            android:layout_margin="4dp"
            android:backgroundTint="#D7DBDD"
            android:onClick="onClick_Append"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:layout_height="54dp"
            android:layout_margin="4dp"
            android:backgroundTint="#D7DBDD"
            android:onClick="onClick_Append"
            android:text="."
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnCalc"
            android:layout_height="54dp"
            android:layout_margin="4dp"
            android:backgroundTint="#186A3B"
            android:text="="
            android:textSize="20dp" />

        <Button
            android:layout_height="54dp"
            android:layout_margin="4dp"
            android:onClick="onClick_Append"
            android:text="+"
            android:textSize="20dp" />
    </TableRow>
</TableLayout>